{
    // For format details, see https://aka.ms/devcontainer.json.
    // https://github.com/devcontainers/images/tree/main/src/base-debian
    // The :debian tag is the latest Debian stable release
    // This is using the base image because uv will manage the Python
    // installation
    "name": "Debian devcontainer",
    "image": "mcr.microsoft.com/devcontainers/base:debian@sha256:30b0a0c004ca94d36c323ee993361a7e0ae25ea255ea125201e8a9587501c324",
    "runArgs": [
        "--net=host"
    ],
    // Available features: https://containers.dev/features
    "features": {
        "ghcr.io/devcontainers/features/copilot-cli:1.0.0": {},
        "ghcr.io/devcontainers/features/github-cli:1.0.15": {},
        "ghcr.io/devcontainers/features/node:1.6.3": {
            "version": "lts",
            "installYarnUsingApt": "false"
        },
        "ghcr.io/devcontainers-extra/features/pre-commit:2.0.18": {},
        "ghcr.io/devcontainers-extra/features/shellcheck:1.0.0": {},
        "ghcr.io/devcontainers-extra/features/uv:1.0.2": {},
        "ghcr.io/dhoeric/features/hadolint:1.0.0": {}
    },
    "postCreateCommand": {
        // Install pre-commit hooks in the background since they can take a
        // while, and we want to minimize waiting during `git commit`
        "Initialize pre-commit environment": "nohup sh -c 'pre-commit install -f --install-hooks &' < /dev/null > /dev/null 2>&1",
        "Install npm tools": "npm install --no-fund -g @google/gemini-cli markdownlint-cli",
        "Install python tools": "for pkg in ruff; do uv tool install $pkg; done"
    },
    "containerEnv": {
        "COPILOT_ALLOW_ALL": "true",
        "COPILOT_MODEL": "gpt-5-mini"
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gemini,target=/home/vscode/.gemini,type=bind,consistency=cached"
    ]
}
